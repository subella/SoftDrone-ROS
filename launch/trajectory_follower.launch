<launch>

    <arg name="use_gripper" default="false"/>

    <node pkg="intel_aero_ros" type="trajectory_tracking_node" name="trajectory_tracking_node" output="screen">
        <remap from="state" to="/mavros/state"/>
        <remap from="pose" to="/mavros/local_position/pose"/>
        <remap from="target" to="/mavros/setpoint_raw/local"/>
        <remap from="lengths" to="/gripper/lengths"/>
        <remap from="tendon_target" to="/sparkgrasptar/world"/>

        <param name="dist_threshold" value="0.35"/>
        <param name="total_time" value="4.0"/>
        <param name="hover_duration" value="3.5"/>
        <param name="start_settle_duration" value="7.0"/>
        <param name="gripper_latency" value="0.370"/>
        <!--<rosparam param="mocap_offset">[0.11, 0.17, 0.2]</rosparam>-->
        <rosparam param="mocap_offset">[0.11, 0.17, -0.055]</rosparam>
        <rosparam param="start_position">[0.0, -1.9, 2.4]</rosparam>
        <rosparam param="offset">[0, 0, -0.150]</rosparam>
        <rosparam param="end_velocity">[0, 0.5, -0.10]</rosparam>
    </node>

    <node if="$(arg use_gripper)" pkg="intel_aero_ros" type="gripper_node" name="gripper" output="screen">
        <remap from="lengths" to="/gripper/lengths"/>
    </node>

</launch>
